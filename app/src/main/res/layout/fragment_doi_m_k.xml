<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragment.DoiMK">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/icon3edit"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:gravity="center"
        android:textColor="#00bcd4"
        android:textSize="35dp"
        android:fontFamily="serif"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:boxStrokeColor="#00bcd4"
        app:hintTextColor="#00bcd4"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/edMatKhauCu"

            android:hint="Mật khẩu cũ"
            android:drawableStart="@drawable/custom_icon_mk"
            android:drawablePadding="10dp"
            android:fontFamily="serif"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        app:boxStrokeColor="#00bcd4"
        app:hintTextColor="#00bcd4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:id="@+id/edMatKhauMoi"


            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:drawableStart="@drawable/custom_icon_mk"
            android:drawablePadding="10dp"
            android:fontFamily="serif"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:boxStrokeColor="#00bcd4"
        app:hintTextColor="#00bcd4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edNhapLaiMatKhauMoi"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:drawableStart="@drawable/custom_icon_mk"
            android:drawablePadding="10dp"
            android:fontFamily="serif"/>
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:id="@+id/btnDoiMatKhau"

        android:layout_marginTop="30dp"
        android:text="Đổi mật khẩu"
        android:textAllCaps="false"
        android:textSize="23dp"
        android:fontFamily="serif"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="@drawable/style_btn"
        />



</LinearLayout>